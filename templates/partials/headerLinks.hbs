    <style>
      * {
    box-sizing: border-box;
    margin: 0%;
    padding: 0%;
}

/* #1e272e */
/* #0097e6 */
html {
    font-size: 62.5%;
}
body{
    display: flex;
    flex-direction: column;
    height: 100vh;
}
.main_menu {
    background: #1e272e;
}
.carousel-inner img{
    border-radius: 1rem;

}
.navbar {
    background: #1e272e;
    color: #fff;
    padding: 2rem 0;
}

.navbar li {
    margin-left: 2rem;
}

.navbar a:hover {
    color: #0097e6;
}

.navbar a {
    color: #fff;
    font-size: 1.8rem;
}

.navbar-toggler {
    background-color: grey;
}

.fa-snowflake-o {
    transition: all linear;
    animation: rot 2s linear infinite;
    color: #0097e6;
}

@keyframes rot {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg)
    }
}
/* main header */
.main-header-left{
height: 70rem;
justify-content: center;
display: flex;
flex-direction: column;
align-items: flex-start;
}
.main-header-left p{
    font-size: 2rem;
} 
.main-header-left h1{
    font-size: 3rem;      
    text-transform: capitalize;
    margin: 1rem 0 4rem 0;
}
.main-header-right{
    height: 70rem;
    justify-content: center;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin: auto;
}
.main-header-right figure img{
    height: 42rem;
    width: 31rem;
    margin: auto;
    border-radius: 1rem;
    box-shadow: (0 0.5rem 1rem rgba(0 0 0 0.3) ) ;
}
.main-header-left .text-color{
 color: #0097e6;
}
.main-header-left button{
    outline: none;
    border: none;
    padding: 0.8rem 1.8rem;
    font-size: 1.4rem;
    border-radius: 2rem;
    text-transform: uppercase;
    box-shadow: 0 8px 6px -6px #000 ;
}
.main-header-left button:hover{
    box-shadow: 0 8px 6px -6px #0097e6 ;

}
/* Weather page */
.temp_form{
    width: 60%;
    position: relative;
    margin: 5rem auto;
}.temp_form input[type='text']{
    width: 100%;
    padding: 2rem 5rem 2rem 2rem; 
    background: #1e202b;
    border: none;
    color: white;
    outline: none;
    font-size: 1.7rem;
    border-radius: 3rem;
}
::placeholder{
    color: #bfc1c8;
}
.temp_form input[type='submit']{
    position: absolute;
    top: 5px;
    right: 5px;
    bottom: 5px;
    border: none;
    background-color: #009ad8;
    padding: 0 3rem;
    border-radius: 3rem;
    color: white;
    font-size: 1.6rem;
}
.temp_form input[type='submit']:hover{
background-color: #0098da;
color: white;
}
.tempInformation{
    width: 40rem;
    margin: auto;
    min-height: 20rem;
    /* padding: 1rem; */
    border-radius: 1rem;
    background-color: #323544;
}
.top_layer{
    width: 100%;
    height: 20%;
    background-color: #2d303d;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 1rem;
    padding: 2rem;
}
.top_layer p{
    color: #fff;
    font-weight: 300;
    font-size: 1.4rem;
}
.main_layer{
    width: 100%;
    height: 80%;
    display: flex;
    flex-direction: column;
    padding: 2rem;
}
.main_layer #city_name{
    color: #bfc1c8;
    font-weight: 300;
    font-size: 2rem;
    padding: 2rem 0;

}
.main_layer .middle_layer{
    display: flex;
    justify-content: space-around;
    color: #fff;
}
.main_layer .middle_layer p,.main_layer .middle_layer .fa{
    font-size: 7rem;
    font-weight: 900;
}
.fa{
    color: #009ad8;
}
sup{
    font-size: 6rem;
    margin-top: -2rem;
}
.data_hide{
    transition: all 0.3s linear;
}
/* footer style */
footer{
    width: 100%;
    background: #1e272e;
    margin-top: auto;
    
}
footer p{
    color: white;
    margin: 0;
    text-align: center;
    line-height: 5rem;
    font-size: 1.4rem;
}
/* error page  */
.errimg img{
width: 60rem;
height: 30rem;
}
/* responsive code */
@media (max-width:768px){
    .main-header-left{
        height: auto;
        margin-right: 3rem;
    }
}
